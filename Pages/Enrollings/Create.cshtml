@page
@model Cursuri.Pages.Enrollings.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Enrolling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Enrolling.MemberID" class="control-label"></label>
                <select asp-for="Enrolling.MemberID" class ="form-control" asp-items="ViewBag.MemberID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Enrolling.CourseID" class="control-label"></label>
                <select asp-for="Enrolling.CourseID" class ="form-control" asp-items="ViewBag.CourseID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Enrolling.EnrolmentDate" class="control-label"></label>
                <input asp-for="Enrolling.EnrolmentDate" class="form-control" />
                <span asp-validation-for="Enrolling.EnrolmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
