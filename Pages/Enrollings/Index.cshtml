@model Cursuri.Pages.Enrollings.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrolling[0].Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrolling[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrolling[0].EnrolmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enrolling) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrolmentDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
